{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<!-- /sections/password.liquid -->
{%- if section.settings.image -%}
  {%- assign background_image = section.settings.image | img_url: '1800x' -%}
{%- else -%}
  {%- assign background_image = 'password-page-background.jpg' | asset_url -%}
{%- endif -%}
<div class="password__wrapper" style="background-image: url('{{ background_image }}');">
  <div class="password__main" role="main">
    <div class="password__main__inner">
      <div class="password__box">
        <h2 class="password__hero">
          {% if section.settings.logo %}
          {% capture image_size %}800x{% endcapture %}
          <img src="{{ section.settings.logo | img_url: image_size }}"
          srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
          alt="{{ section.settings.logo.alt | default: langify_shop_name }}"
          class="logo"
          itemprop="logo">
          {% else %}
            <span>{{ langify_shop_name }}</span>
          {% endif %}
        </h2>

        {% comment %}
          Edit message at http://www.shopify.com/admin/online_store/preferences
        {% endcomment %}
        {% unless shop.password_message == blank %}
          <div class="password__message">
            {{ shop.password_message }}
          </div>
        {% endunless %}

        {% comment %}
          Signup form
        {% endcomment %}

        <div class="password__signup-form">
          {% form 'customer' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
              <p class="form-success">{% comment %}ly_i18n_replace_for_[ 'general.password_page.signup_form_success' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.signup_form_success' | t }}{% endcapture %}{% include 'ly-static-string' with '16756451' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</p>
            {% else %}
              <input type="hidden" name="contact[tags]" value="prospect, password page">
              <label for="email" class="hidden-label">{% comment %}ly_i18n_replace_for_[ 'general.password_page.signup_form_email_label' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.signup_form_email_label' | t }}{% endcapture %}{% include 'ly-static-string' with '16756452' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</label>
              <div class="input-group newsletter-form">
                <input type="text" name="contact[email]" id="email" class="input-group-field" placeholder="{% comment %}ly_i18n_replace_for_[ 'general.password_page.signup_form_email_placeholder' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.signup_form_email_placeholder' | t }}{% endcapture %}{% include 'ly-static-string' with '16756453' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" autofocus>
                <span class="input-group-btn">
                  <button type="submit" name="commit" class="btn uppercase">
                    <span>{% comment %}ly_i18n_replace_for_[ 'general.password_page.signup_form_submit' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.signup_form_submit' | t }}{% endcapture %}{% include 'ly-static-string' with '16756454' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
                  </button>
                </span>
              </div>
            {% endif %}
          {% endform %}
        </div>

        {% comment %}
          Share homepage URL
          Shared text is from the store meta description
        {% endcomment %}

        {% if settings.share_enable_facebook or settings.share_enable_twitter or settings.share_enable_google or settings.share_enable_pinterest %}
        <div class="password__social-sharing">
            {% capture link %}{{ shop.url }}{% endcapture %}
            {% capture title %}{{ shop.password_message | url_param_escape }}{% endcapture %}
            <div class="share text-center" data-permalink="{{ link }}">
              {% if settings.share_enable_facebook %}
                <a target="_blank" href="//www.facebook.com/sharer.php?u={{ link }}" class="share__link">
                  <span class="icon icon-facebook" aria-hidden="true"></span>
                  <span class="share__text">{% comment %}ly_i18n_replace_for_[ 'general.share.facebook' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.share.facebook' | t }}{% endcapture %}{% include 'ly-static-string' with '16756455' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
                </a>
              {% endif %}
              {% if settings.share_enable_twitter %}
                <a target="_blank" href="//twitter.com/share?url={{ link }}&text={{ shareTitle }}" class="share__link">
                  <span class="icon icon-twitter" aria-hidden="true"></span>
                  <span class="share__text">{% comment %}ly_i18n_replace_for_[ 'general.share.twitter' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.share.twitter' | t }}{% endcapture %}{% include 'ly-static-string' with '16756456' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
                </a>
              {% endif %}
              {% if settings.share_enable_pinterest %}
                <a target="_blank" href="http://pinterest.com/pin/create/button/?url={{ link }}&media={{ product.featured_image | product_img_url: '1024x1024' | prepend: 'http:' }}&description={{ shareTitle }}" class="share__link">
                  <span class="icon icon-pinterest" aria-hidden="true"></span>
                  <span class="share__text">{% comment %}ly_i18n_replace_for_[ 'general.share.pinterest' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.share.pinterest' | t }}{% endcapture %}{% include 'ly-static-string' with '16756457' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
                </a>
              {% endif %}
              {% if settings.share_enable_google %}
                <a target="_blank" href="//plus.google.com/share?url={{ link }}" class="share__link">
                  <span class="icon icon-google" aria-hidden="true"></span>
                  <span class="share__text">{% comment %}ly_i18n_replace_for_[ 'general.share.google' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.share.google' | t }}{% endcapture %}{% include 'ly-static-string' with '16756458' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}

      </div>
    </div>

  </div>

  <footer class="password__footer" role="contentinfo">
    <div class="password__footer__inner">
      <p class="password-login uppercase">
        <a href="http://www.shopify.com">
          {% comment %}ly_i18n_replace_for_[ 'general.password_page.powered_by_shopify' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.powered_by_shopify' | t }}{% endcapture %}{% include 'ly-static-string' with '16756459' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
        </a>
        <span class="hidden-md">|</span>
        <a href="#LoginModal" class="js-toggle-login-modal" data-mfp-src="#LoginModal">
          {% comment %}ly_i18n_replace_for_[ 'general.password_page.password_link' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.password_link' | t }}{% endcapture %}{% include 'ly-static-string' with '16756460' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
        </a>
      </p>
    </div>
  </footer>

</div>

<div id="LoginModal" class="password__login-form text-center mfp-hide">
  <p class="h4 title">{% comment %}ly_i18n_replace_for_[ 'general.password_page.login_form_heading' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.login_form_heading' | t }}{% endcapture %}{% include 'ly-static-string' with '16756461' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</p>
  {% form 'storefront_password' %}
  {{ form.errors | default_errors }}
  <label for="password" class="hidden-label">{% comment %}ly_i18n_replace_for_[ 'general.password_page.login_form_password_label' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.login_form_password_label' | t }}{% endcapture %}{% include 'ly-static-string' with '16756462' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</label>
  <div class="input-group newsletter-form">
    <input type="password" name="password" id="password" class="input-group-field" placeholder="{% comment %}ly_i18n_replace_for_[ 'general.password_page.login_form_password_placeholder' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.login_form_password_placeholder' | t }}{% endcapture %}{% include 'ly-static-string' with '16756463' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" autofocus>
    <span class="input-group-btn">
      <button type="submit" name="commit" class="btn uppercase">
        <span>{% comment %}ly_i18n_replace_for_[ 'general.password_page.login_form_submit' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.login_form_submit' | t }}{% endcapture %}{% include 'ly-static-string' with '16756464' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
      </button>
    </span>
  </div>
  {% endform %}
  <p class="admin-login">{% comment %}ly_i18n_replace_for_[ 'general.password_page.admin_link_html' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.password_page.admin_link_html' | t }}{% endcapture %}{% include 'ly-static-string' with '16756465' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</p>
</div>

{% comment %}ly_asset_replace_for_[ 'shop.js' | asset_url | script_tag ]_begin{% endcomment %}{% assign ly_asset = 'shop.js' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | script_tag }}{% comment %}ly_asset_replace_end{% endcomment %}

<script>

$(function() {
  $('.js-toggle-login-modal').magnificPopup({
    type: 'inline',
    mainClass: 'mfp-fade',
    closeOnBgClick: false,
    closeBtnInside: false,
    closeOnContentClick: false,
    tClose: 'x',
    removalDelay: 500,
    callbacks: {
      open: function() {
        window.setTimeout( function() { document.getElementById('password').focus(); }, 50 );
      },
      close: function() {
        window.setTimeout( function() { document.getElementById('email').focus(); }, 50 );
      }
    }
  });
  if ( $('.storefront-password-form .errors').size() ) {
    $('.js-toggle-login-modal').click();
  }
});
</script>


