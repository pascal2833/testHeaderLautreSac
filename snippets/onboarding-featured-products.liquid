{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<!-- snippets/onboarding-featured-products.liquid -->

<div class="grid__item">
  <div class="helper-section">

    <div class="grid-uniform">
      {% for i in (1..product_limit) %}
        <div class="grid__item product-grid-item {{ grid_width_small }} {{ grid_width_medium }} {{ grid_width_large }}">
          <span class="grid__image">
            {% capture imgCount %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
            {% capture svg_name %}product-{{ imgCount }}{% endcapture %}
            {{ svg_name | placeholder_svg_tag: 'placeholder-svg' }}
          </span>
          <div class="figcaption hover">
            <p class="h6 name_wrapper"><span>{% comment %}ly_i18n_replace_for_[ 'home_page.onboarding.product_title' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'home_page.onboarding.product_title' | t }}{% endcapture %}{% include 'ly-static-string' with '16756532' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span></p>
            <p class="price_wrapper"><span class="price"><span class="money">$19.99</span></span></p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
